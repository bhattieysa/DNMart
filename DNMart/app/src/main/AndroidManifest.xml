<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dn_mart">

    <application
        android:name=".Singleton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".WishlistHistory"
            android:theme="@style/Noaction"

            ></activity>
        <activity
            android:name=".OrderHistory"
            android:theme="@style/Noaction" />
        <activity
            android:name=".BarcodeReader"
            android:theme="@style/Noaction" />
        <activity
            android:name=".Splash"
            android:theme="@style/Noaction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Checkout2"

            android:theme="@style/Noaction"

            />
        <activity
            android:name=".Checkout1"
            android:theme="@style/Noaction" />
        <activity
            android:name=".Checkout"
            android:theme="@style/Noaction" />
        <activity
            android:name=".ViewProducts"
            android:theme="@style/Noaction" />
        <activity
            android:name=".Home"
            android:configChanges="orientation"
            android:hardwareAccelerated="false"
            android:theme="@style/Noaction"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Login"
            android:theme="@style/Noaction" />
        <activity
            android:name=".signup"
            android:theme="@style/Noaction" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Portrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>